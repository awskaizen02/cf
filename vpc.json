{
"AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Metadata": {

    },
    "Parameters": {
        
        "vpccidr": {
            "Description": "-",
            "Type": "String",
            "Default": "10.0.0.0/24"
        },
        
        "SN1CIDR": {
            "Description": "CHOOSE THE CIDR FOR SN1",
            "Type": "String",
            "Default": "10.0.0.0/28"
        },
        
        "SN1AZ": {
            "Description": "CHOOSE THE AZ FOR SN1",
            "Type": "AWS::EC2::AvailabilityZone::Name"
                 },

        "SN2CIDR": {
            "Description": "CHOOSE THE CIDR FOR SN2",
            "Type": "String",
            "Default": "10.0.0.16/28"
        },
        
        "SN2AZ": {
            "Description": "CHOOSE THE AZ FOR SN1",
            "Type": "AWS::EC2::AvailabilityZone::Name"
                 },
        
        "AAMI": {
            "Description": "CHOOSE THE AMI ",
            "Type": "AWS::EC2::Image::Id"
        },
        
        "AEC2": {
            "Description": "CHOOSE THE EC2 INSTACE TYPE",
            "Type": "String",
            "Default": "t2.micro"
        },
        
        "AKEY": {
            "Description": "CHOOSE THE KEY PAIR",
            "Type": "AWS::EC2::KeyPair::KeyName"
        }
        
        
                         
        
        
    
    },
    "Mappings": {

    },
    "Conditions": {

    },
    "Resources": {
        
        "AVPC": {
          "Type": "AWS::EC2::VPC",
          "Properties": {
            "CidrBlock": { "Ref": "vpccidr" },
            "EnableDnsHostnames" : "true",
            "Tags": [{"Key" : "Name", "Value" : "AVPC"}]
            
          }
        },

        
        "AIGW": {
          "Type": "AWS::EC2::InternetGateway",
          "Properties": {
            "Tags": [{"Key" : "Name", "Value" : "AIGW"}]
          }
        },
        "AttachGateway": {
          "Type": "AWS::EC2::VPCGatewayAttachment",
          "Properties": {
            "VpcId": { "Ref": "AVPC" },
            "InternetGatewayId": { "Ref": "AIGW" }
          }
        },
        "ASN1": {
          "Type": "AWS::EC2::Subnet",
          "Properties": {
            "AvailabilityZone": { "Ref": "SN1AZ" },
            "MapPublicIpOnLaunch": "true",
            "VpcId": { "Ref": "AVPC" },
            "CidrBlock": { "Ref": "SN1CIDR" },
            "Tags": [{"Key" : "Name", "Value" : "ASN1"}]
          }
        },
        "ASN2": {
          "Type": "AWS::EC2::Subnet",
          "Properties": {
            "AvailabilityZone": { "Ref": "SN2AZ" },
            "VpcId": { "Ref": "AVPC" },
            "CidrBlock": { "Ref": "SN2CIDR" },
            "Tags": [{"Key" : "Name", "Value" : "ASN2"}]
            
          }
        },
        
        "AUGRT": {
          "Type": "AWS::EC2::RouteTable",
          "Properties": {
            "VpcId": { "Ref": "AVPC" },
            "Tags": [{"Key" : "Name", "Value" : "AUGRT"}]
          }
        },
        
        "routeName": {
          "Type": "AWS::EC2::Route",
          "Properties": {
            "RouteTableId": { "Ref": "AUGRT" },
            "DestinationCidrBlock": "0.0.0.0/0",
            "GatewayId": { "Ref": "AIGW" }
          }
        },
        
        "routeTableAssocName": {
          "Type": "AWS::EC2::SubnetRouteTableAssociation",
          "Properties": {
            "SubnetId": { "Ref": "ASN1" },
            "RouteTableId": { "Ref": "AUGRT" }
          }
        },
        
        "ASG" : {
          "Type" : "AWS::EC2::SecurityGroup",
          "Properties" : {
            "GroupDescription" : "-",
            "SecurityGroupIngress" : [ 
              {
                "IpProtocol" : "tcp",
                "FromPort" : "22",
                "ToPort" : "22",
                "CidrIp" : "0.0.0.0/0"
              },
              {
                "IpProtocol" : "tcp",
                "FromPort" : "80",
                "ToPort" : "80",
                "CidrIp" : "0.0.0.0/0"
              },
              {
                "IpProtocol" : "tcp",
                "FromPort" : "443",
                "ToPort" : "443",
                "CidrIp" : "0.0.0.0/0"
              }
            ],
            "VpcId" : { "Ref": "AVPC" },
            "Tags" :  [{"Key" : "Name", "Value" : "ASG"}]
          }
        },
        
        "AJUMP": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": { "Ref": "AKEY" },
                "SubnetId" : { "Ref": "ASN1" },
                "ImageId": { "Ref": "AAMI" },
                "InstanceType": { "Ref": "AEC2" },
                "Monitoring": "false",
                "SecurityGroupIds" : [
                { "Ref": "ASG" }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AJUMP"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -ex",
                                "-"
                            ]
                        ]
                    }
                }
        }
                }
        
        
        
          
        
        
        
        

    },
    "Outputs": {

    }
}